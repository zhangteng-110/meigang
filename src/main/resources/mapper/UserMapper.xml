<mapper namespace="com.beautifulharborbackstage.dao.mapper.UserMapper" >
    <resultMap id="BaseResultMap" type="com.beautifulharborbackstage.pojo.dto.UserDTO" >
        <id column="userId" property="userId" jdbcType="BIGINT" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="userSex" property="userSex" javaType="com.beautifulharborbackstage.pojo.po.UserSexEnum"/>
        <result column="realName" property="realName" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List" >
        userId , username, password, userSex, realName,userCode
    </sql>

    <select id="login" resultMap="BaseResultMap"  parameterType="com.beautifulharborbackstage.pojo.dto.UserDTO">
        SELECT
        <include refid="Base_Column_List" />
        FROM user
        where username = #{username} and password = #{password}
    </select>

